@{
    var errorIcon = ViewBag.ErrorCode switch
    {
        "403" => "fas fa-ban", // üö´ Accesso Negato
        "404" => "fas fa-search", // üîç Pagina Non Trovata
        "500" => "fas fa-exclamation-triangle", // ‚ö† Errore Server
        _ => "fas fa-exclamation-circle" // ‚ùó Altro Errore
    };
}

<div class="container mt-5 text-center">
    <h1 class="text-danger">
        <i class="@errorIcon"></i> Errore @ViewBag.ErrorCode
    </h1>
    <p class="lead">@ViewBag.ErrorMessage</p>
    <a class="btn btn-primary" href="/">Torna alla Home</a>
</div>