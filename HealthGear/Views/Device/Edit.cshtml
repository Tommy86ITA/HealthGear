@model HealthGear.Models.Device

<h2>Modifica Dispositivo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome del dispositivo</label>
        <input asp-for="Name" class="form-control" placeholder="Inserisci il nome del dispositivo" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Brand" class="control-label">Marca</label>
        <input asp-for="Brand" class="form-control" placeholder="Inserisci la marca del dispositivo" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label">Modello</label>
        <input asp-for="Model" class="form-control" placeholder="Inserisci il modello del dispositivo" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SerialNumber" class="control-label">Numero di Serie</label>
        <input asp-for="SerialNumber" class="form-control" placeholder="Inserisci il numero di serie" />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="control-label">Ubicazione</label>
        <input asp-for="Location" class="form-control" placeholder="Inserisci l'ubicazione del dispositivo" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="CertificationCE" class="form-check-input" />
        <label asp-for="CertificationCE" class="form-check-label">Certificazione CE</label>
    </div>

    <div class="form-group form-check">
        <input asp-for="ManualAvailable" class="form-check-input" />
        <label asp-for="ManualAvailable" class="form-check-label">Manuale disponibile</label>
    </div>

    <div class="form-group">
        <label asp-for="MaintenanceDate" class="control-label">Data di Manutenzione</label>
        <input asp-for="MaintenanceDate" class="form-control" type="date" />
        <span asp-validation-for="MaintenanceDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NextMaintenance" class="control-label">Prossima Manutenzione</label>
        <input asp-for="NextMaintenance" class="form-control" type="date" />
        <span asp-validation-for="NextMaintenance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NextElectricalTest" class="control-label">Prossima Verifica Elettrica</label>
        <input asp-for="NextElectricalTest" class="form-control" type="date" />
        <span asp-validation-for="NextElectricalTest" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NextPhysicalInspection" class="control-label">Prossimo Controllo Fisico</label>
        <input asp-for="NextPhysicalInspection" class="form-control" type="date" />
        <span asp-validation-for="NextPhysicalInspection" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">Note</label>
        <textarea asp-for="Notes" class="form-control" placeholder="Inserisci eventuali note"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}