@model Device

<h2>Modifica Dispositivo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome del dispositivo</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Brand" class="control-label">Produttore</label>
        <input asp-for="Brand" class="form-control" required />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label">Modello</label>
        <input asp-for="Model" class="form-control" required />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SerialNumber" class="control-label">Numero di Serie</label>
        <input asp-for="SerialNumber" class="form-control" required />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="control-label">Ubicazione (facoltativa)</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeviceType" class="control-label">Tipologia Dispositivo</label>
        <select asp-for="DeviceType" class="form-control" required>
            <option value="Radiogeno">Radiogeno</option>
            <option value="Ecografico">Ecografico</option>
            <option value="Cardiologico">Cardiologico</option>
            <option value="Altro">Altro</option>
        </select>
        <span asp-validation-for="DeviceType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataCollaudo" class="control-label">Data di Collaudo</label>
        <input asp-for="DataCollaudo" class="form-control" type="date" required />
        <span asp-validation-for="DataCollaudo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstElectricalTest" class="control-label">Data Prima Verifica Elettrica</label>
        <input asp-for="FirstElectricalTest" class="form-control" type="date" required />
        <span asp-validation-for="FirstElectricalTest" class="text-danger"></span>
    </div>

    <div class="form-group" id="physicalTestContainer" style="display: @(Model.DeviceType == "Radiogeno" ? "block" : "none");">
        <label asp-for="FirstPhysicalInspection" class="control-label">Data Prima Verifica Fisica</label>
        <input asp-for="FirstPhysicalInspection" class="form-control" type="date" />
        <span asp-validation-for="FirstPhysicalInspection" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">Note</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("DeviceType").addEventListener("change", function () {
            var physicalTestContainer = document.getElementById("physicalTestContainer");
            if (this.value === "Radiogeno") {
                physicalTestContainer.style.display = "block";
            } else {
                physicalTestContainer.style.display = "none";
            }
        });
    </script>
}