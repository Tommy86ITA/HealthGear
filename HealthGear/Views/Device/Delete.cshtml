@model Device

<h2>Elimina Dispositivo</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h3 class="text-danger">Sei sicuro di voler eliminare questo dispositivo?</h3>

<div class="border p-3">
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Modello</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Numero di serie</dt>
        <dd class="col-sm-10">@Model.SerialNumber</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger" 
            onclick="return confirm('Sei sicuro di voler eliminare questo dispositivo? Questa azione non puÃ² essere annullata.')">
        Elimina
    </button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}