@model PhysicalInspection

<h2>Conferma Eliminazione</h2>

<h4>Sei sicuro di voler eliminare questo controllo fisico?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Data del Controllo:</dt>
    <dd class="col-sm-10">@Model.InspectionDate.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Eseguito da:</dt>
    <dd class="col-sm-10">@Model.PerformedBy</dd>

    <dt class="col-sm-2">Esito:</dt>
    <dd class="col-sm-10">@(Model.Passed ? "Superato" : "Non Superato")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DeviceId" />

    <button type="submit" class="btn btn-danger">Elimina</button>
    <a asp-action="Index" asp-route-deviceId="@Model.DeviceId" class="btn btn-secondary">Annulla</a>
</form>