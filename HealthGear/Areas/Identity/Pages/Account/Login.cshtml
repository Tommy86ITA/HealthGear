@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex align-items-center justify-content-center vh-60">
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 500px;">
        <div class="card-body text-center">

            <!-- Logo -->
            <img src="~/img/logo-healthgear-resized.png" alt="Logo HealthGear" class="mb-3" style="width: 64px; height: 64px;" />

            <h3 class="card-title">
                <i class="fas fa-sign-in-alt"></i> Login
            </h3>
            <p class="text-muted">Inserisci le tue credenziali per accedere al sistema HealthGear.</p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username"
                           placeholder="Inserisci il tuo username">
                    <label asp-for="Input.UserName">Nome utente</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password"
                           placeholder="Inserisci la password">
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3 text-start">
                    <input class="form-check-input" asp-for="Input.RememberMe">
                    <label class="form-check-label" asp-for="Input.RememberMe">Ricordami</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Accedi
                    </button>
                </div>

                <div class="mt-3 text-center">
                    <a asp-controller="ForgotPassword" asp-action="Index" class="d-block">Password dimenticata?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}